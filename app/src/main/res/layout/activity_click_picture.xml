<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/black"
    tools:context=".clickPictureActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/capturelog"
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/captureimg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Capture Image to detect wound, burns and injuries. Dr. ML will give you first-aid measures. "
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/btn_captureImage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:text="Capture image"
        android:textColor="@color/black"
        android:textSize="36dp"
        android:textStyle="bold"/>


</LinearLayout>